<div class="row">
    <div class="col-md-10 mx-auto">
        <div class="card card-body mb-3">
            <form action="/posts/{{post._id}}?_method=PUT" method="POST">
                <input type="hidden" value="PUT" name="_method">
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" name="title" class="form-control" value="{{post.title}}">
                </div>
                <div class="form-group">
                    <label for="status">Status</label>
                    <select name="status" class="form-control">
                        <option value="public">Public</option>
                        <option value="private">Private</option>
                    </select>
                </div>
                <div class="form-group form-check">
                    <input type="checkbox" class="form-check-input" name="allowComments" {{#if post.allowComments}} checked="checked" {{/if}}>
                    <label for="allowComments" class="form-check-label">Allow Comments</label>
                </div>
                <div class="form-group">
                    <textarea name="postBody">{{post.postBody}}</textarea>
                </div>
                <input type="submit" class="btn btn-primary" value="Submit">
            </form>
        </div>
    </div>
</div>