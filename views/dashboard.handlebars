<h1>Welcome {{user.displayName}}</h1>
<h5>Your Posts</h5>
<a href="/posts/add" class="btn btn-danger mb-2">
    <i class="fas fa-plus"></i> Create Post</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Status</th>
            <th>Manipulate</th>
        </tr>
    </thead>
    <tbody>
        {{#each posts}}
        <tr>
            <td>
                <a href="/posts/show/{{_id}}">{{truncate title 30 '....'}}</a>
            </td>
            <td>{{formatDate date 'MMMM Do YYYY'}}</td>
            <td class="capitalize">{{status}}</td>
            <td>
                <a href="/posts/edit/{{_id}}" class="btn btn-dark delete-btn">
                    <i class="fas fa-pencil-alt fab-icon"></i>
                </a>
                {{!-- MODAL TRIGGER BUTTON --}}
                <button type="button" data-toggle="modal" data-target="#deleteModal" class="btn btn-danger">
                    <i class="fas fa-trash font-icons-xs fab-icon"></i>
                </button>
            </td>
        </tr>
        {{!-- MODAL --}}
        <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Confirm Delete</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        Do You Want To Delete?<br> 
                        {{title}}
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fas fa-times"></i> Close</button>
                        <form action="/posts/{{_id}}?_method=DELETE" method="POST">
                            <input type="hidden" value="DELETE" name="_method">
                            <button class="btn btn-danger">
                                <i class="fas fa-trash"></i> Confirm</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </tbody>
</table>

